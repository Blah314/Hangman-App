<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="sg.com.yahoo.ryanlouck.hang10.MainActivity" >

   <ImageView
       android:id="@+id/title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:adjustViewBounds="true"
       android:scaleType="fitCenter"
       android:src="@drawable/title1" />

   <LinearLayout
       android:id="@+id/buttonLine"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/title" >

       <ImageButton
           android:id="@+id/playButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:background="@drawable/blankbox"
           android:scaleType="fitXY"
           android:layout_weight="1"
           android:src="@drawable/playbutton" />

       <ImageButton
           android:id="@+id/continueButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:background="@drawable/blankbox"
           android:scaleType="fitXY"
           android:layout_weight="1"
           android:src="@drawable/contbutton" />

       <ImageButton
           android:id="@+id/helpButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:background="@drawable/blankbox"
           android:scaleType="fitXY"
           android:layout_weight="1"
           android:src="@drawable/helpbutton" />

       <ImageButton
           android:id="@+id/optionsButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:adjustViewBounds="true"
           android:background="@drawable/blankbox"
           android:scaleType="fitXY"
           android:layout_weight="1"
           android:src="@drawable/optionsbutton" />
   </LinearLayout>

</RelativeLayout>